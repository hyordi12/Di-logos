<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/spiderman</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="buttonStyle">@style/AppButtonRed</item>
    </style>


    <style name="AppButtonRed" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">#8B0000</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
    </style>


    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/colorTextWhiteStrong</item>
        <item name="android:buttonBarButtonStyle">@style/DialogButtonStyle</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:textColorAlertDialogListItem">@android:color/black</item>
    </style>


    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">12dp</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


    <style name="AppEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorTextWhiteStrong</item> <!-- Texto blanco fuerte -->
        <item name="android:textColorHint">@color/colorTextWhiteStrong</item> <!-- Hint blanco fuerte -->
    </style>
</resources>
